<?xml version="1.0" encoding="UTF-8"?>

<project name="drush-install" default="install:drupal">

  <!-- ## Properties -->

  <property name="drush.bin"    value="${project.basedir}/bin/drush" />
  <property name="drush.target" value="" />

  <property name="drupal.profile"      value="standard" />
  <property name="drupal.sites.subdir" value="default" />

  <!-- ## Targets -->

  <target name="install:drupal"
          description="Installs Drupal on a clean database.">
    <exec command="${drush.bin} ${drush.target} site-install ${drupal.profile} -y --sites-subdir=${drupal.sites.subdir}"
          passthru="true"
          logoutput="true"
          checkreturn="true" />
  </target>

</project>
