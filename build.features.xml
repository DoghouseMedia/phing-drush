<?xml version="1.0" encoding="UTF-8"?>

<project name="drush-features" default="features:revert">

  <!-- ## Properties -->

  <property name="drush.bin"    value="${project.basedir}/bin/drush" />
  <property name="drush.cmd"    value="${drush.bin}" />
  <property name="drush.target" value="@${phing.project.name}.local" />

  <!-- ## Targets -->

  <target name="features:revert"
          description="Reverts all the features.">
    <exec command="${drush.cmd} ${drush.target} fra -y"
          passthru="true"
          logoutput="true"
          checkreturn="true" />
  </target>

</project>
