<?xml version="1.0" encoding="UTF-8"?>

<project name="drush" default="drush:init">

  <!-- ## Properties -->

  <property name="drush.alias.file" value="${phing.project.name}.aliases.drushrc.php" />

  <!-- ## Targets -->

  <target name="drush:init"
          description="Sets up the Drush alias.">
    <exec command="mkdir -p ~/.drush"
          passthru="true"
          logoutput="true"
          checkreturn="true" />
    <exec command="cp ${project.basedir}/${drush.alias.file} ~/.drush/"
          passthru="true"
          logoutput="true"
          checkreturn="true" />
  </target>

</project>
