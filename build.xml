<?xml version="1.0" encoding="UTF-8"?>

<project name="drush" default="drush:init">

  <!-- ## Properties -->

  <property name="drush.alias.file" value="${project.basedir}/example.aliases.drushrc.php" />

  <!-- ## Targets -->

  <target name="drush:init"
          description="Sets up the Drush alias.">
    <exec command="mkdir -p ${env.HOME}/.drush"
          passthru="true"
          logoutput="true"
          checkreturn="true" />
    <copy file="${drush.alias.file}"
          tofile="${env.HOME}/.drush/${phing.project.name}.aliases.drushrc.php"
          overwrite="true">
      <filterchain>
        <expandproperties />
      </filterchain>
    </copy>
  </target>

</project>
